{
  "name": "easypublish",
  "version": "1.4.0",
  "description": "一站式发布应用",
  "main": "./out/main/index.js",
  "author": "Asendaushoe",
  "homepage": "https://github.com/vcb-s/EasyPublish",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder -p never --win",
    "build:mac": "npm run build && electron-builder -p never --mac",
    "build:linux": "npm run build && USE_SYSTEM_FPM=true electron-builder -p never --linux --aarch64"
  },
  "dependencies": {
    "commonmark": "^0.31.2",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "vue-codemirror": "^6.1.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "codemirror": "^6.0.2",
    "@bbob/html": "^4.2.0",
    "@bbob/preset-html5": "^4.2.0",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@element-plus/icons-vue": "^2.3.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.14.8",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "axios": "^1.7.7",
    "axios-retry": "^4.5.0",
    "crypto-js": "^4.2.0",
    "electron": "^32.2.1",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.1.7",
    "electron-vite": "^2.3.0",
    "element-plus": "^2.8.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "lowdb": "^7.0.1",
    "markdown-to-bbcode": "^0.5.5",
    "marked": "^14.1.3",
    "prettier": "^3.3.2",
    "socks-proxy-agent": "^8.0.5",
    "turndown": "^7.2.0",
    "typescript": "^5.6.2",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-icons": "^0.19.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.3.1",
    "vite-plugin-vue-devtools": "^7.4.6",
    "vue": "^3.4.30",
    "vue-router": "^4.4.5",
    "vue-tsc": "^2.0.29"
  }
}
